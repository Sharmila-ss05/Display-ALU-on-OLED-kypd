                13: bits = 12'b000000000000;
                14: bits = 12'b000000000000;
                15: bits = 12'b000000000000;
            endcase
            7: case(row)
                0:  bits = 12'b111111111111;
                1:  bits = 12'b111111111111;
                2:  bits = 12'b000000011111;
                3:  bits = 12'b000000111110;
                4:  bits = 12'b000001111100;
                5:  bits = 12'b000011111000;
                6:  bits = 12'b000111110000;
                7:  bits = 12'b001111100000;
