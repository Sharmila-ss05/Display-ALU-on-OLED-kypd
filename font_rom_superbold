                13: bits = 12'b000000111100;
                14: bits = 12'b000000000000;
                15: bits = 12'b000000000000;
            endcase
            5: case(row)
                0:  bits = 12'b111111111111;
                1:  bits = 12'b111111111111;
                2:  bits = 12'b111000000000;
                3:  bits = 12'b111000000000;
                4:  bits = 12'b111000000000;
                5:  bits = 12'b111111111100;
                6:  bits = 12'b111111111110;
                7:  bits = 12'b000000001111;
                8:  bits = 12'b000000000111;
