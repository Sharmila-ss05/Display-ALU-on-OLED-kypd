                13: bits = 12'b001111111100;
                14: bits = 12'b000000000000;
                15: bits = 12'b000000000000;
            endcase
            4: case(row)
                0:  bits = 12'b000000111100;
                1:  bits = 12'b000001111100;
                2:  bits = 12'b000011111100;
                3:  bits = 12'b000111111100;
