                0:  bits = 12'b001111111100;
                1:  bits = 12'b011111111110;
                2:  bits = 12'b111100001111;
                3:  bits = 12'b111000000111;
                4:  bits = 12'b000000000111;
                5:  bits = 12'b000000001111;
                6:  bits = 12'b000000011110;
                7:  bits = 12'b000000111100;
                8:  bits = 12'b000001111000;
