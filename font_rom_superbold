                12: bits = 12'b001111100000;
                13: bits = 12'b000000000000;
                14: bits = 12'b000000000000;
                15: bits = 12'b000000000000;
            endcase
            8: case(row)
                0:  bits = 12'b001111111100;
                1:  bits = 12'b011111111110;
                2:  bits = 12'b111100001111;
                3:  bits = 12'b111000000111;
                4:  bits = 12'b111000000111;
                5:  bits = 12'b111100001111;
                6:  bits = 12'b011111111110;
                7:  bits = 12'b111100001111;
                8:  bits = 12'b111000000111;
