module font_rom_superbold(
    input [3:0] char_idx, // 0-9: digits, 10: '-'
    input [3:0] row,
    output reg [11:0] bits
);
    always @(*) begin
        case (char_idx)
            0: case(row)
                0:  bits = 12'b001111111100;
                1:  bits = 12'b011111111110;
                2:  bits = 12'b111100001111;
                3:  bits = 12'b111000000111;
                4:  bits = 12'b111000000111;
                5:  bits = 12'b111000000111;
                6:  bits = 12'b111000000111;
                7:  bits = 12'b111000000111;
                8:  bits = 12'b111000000111;
