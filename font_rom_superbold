                13: bits = 12'b011111111110;
                14: bits = 12'b001111111100;
                15: bits = 12'b000000000000;
            endcase
            1: case(row)
                0:  bits = 12'b000011110000;
                1:  bits = 12'b000111110000;
                2:  bits = 12'b001111110000;
                3:  bits = 12'b011111110000;
